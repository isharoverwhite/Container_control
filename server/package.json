{
    "name": "container-control-server",
    "version": "1.0.0",
    "description": "Backend API for Container Control",
    "main": "src/index.js",
    "scripts": {
        "start": "npm run start:all",
        "start:all": "concurrently \"npm run start:gateway\" \"npm run start:containers\" \"npm run start:images\" \"npm run start:volumes\" \"npm run start:stacks\" \"npm run start:auth\" \"npm run start:system\" \"npm run start:networks\" \"npm run start:webui\"",
        "start:gateway": "node services/gateway/index.js",
        "start:containers": "node services/containers/index.js",
        "start:images": "node services/images/index.js",
        "start:volumes": "node services/volumes/index.js",
        "start:stacks": "node services/stacks/index.js",
        "start:auth": "node services/auth/index.js",
        "start:system": "node services/system/index.js",
        "start:networks": "node services/networks/index.js",
        "start:webui": "cd services/webui && npm start -- -p 8080",
        "dev": "concurrently \"npm run dev:gateway\" \"npm run dev:containers\" \"npm run dev:images\" \"npm run dev:volumes\" \"npm run dev:stacks\" \"npm run dev:auth\" \"npm run dev:system\" \"npm run dev:networks\" \"npm run dev:webui\"",
        "dev:gateway": "nodemon services/gateway/index.js",
        "dev:containers": "nodemon services/containers/index.js",
        "dev:images": "nodemon services/images/index.js",
        "dev:volumes": "nodemon services/volumes/index.js",
        "dev:stacks": "nodemon services/stacks/index.js",
        "dev:auth": "nodemon services/auth/index.js",
        "dev:system": "nodemon services/system/index.js",
        "dev:networks": "nodemon services/networks/index.js",
        "dev:webui": "cd services/webui && npm run dev -- -p 8080"
    },
    "dependencies": {
        "axios": "^1.13.2",
        "concurrently": "^9.2.1",
        "cors": "^2.8.5",
        "docker-compose": "^1.3.0",
        "dockerode": "^4.0.2",
        "dotenv": "^16.4.5",
        "express": "^4.18.2",
        "http-proxy-middleware": "^3.0.5",
        "node-fetch": "^2.7.0",
        "socket.io": "^4.7.2"
    },
    "devDependencies": {
        "nodemon": "^3.0.1"
    }
}
